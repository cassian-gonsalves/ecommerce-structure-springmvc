    </c:when>
    
    <c:when test="${requestScope.task.equals('productDeleted')}">
    	Product is deleted successfully.
    </c:when>
    
    <c:when test="${requestScope.task.equals('productEdited')}">
    	Product: ${requestScope.productName} is edited successfully.
    </c:when>
    
  </c:choose>
